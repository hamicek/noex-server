{
  "name": "@hamicek/noex-server",
  "version": "0.1.0",
  "description": "WebSocket/HTTP server for @hamicek/noex-store and @hamicek/noex-rules",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "noex-server": "./dist/bin/noex-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "changelog": "changelogen",
    "release": "changelogen --release"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "@hamicek/noex": "^0.1.0",
    "@hamicek/noex-store": "^0.1.0",
    "@hamicek/noex-rules": "^0.1.0",
    "better-sqlite3": "^11.0.0 || ^12.0.0"
  },
  "peerDependenciesMeta": {
    "@hamicek/noex-rules": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hamicek/noex": "^0.1.0",
    "@hamicek/noex-store": "^0.1.0",
    "@hamicek/noex-rules": "^0.1.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "better-sqlite3": "^12.5.0",
    "changelogen": "^0.6.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
